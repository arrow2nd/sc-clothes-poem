{
  "name": "shiny-poems",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:update": "jest -u",
    "test:e2e": "playwright test ./tests/e2e",
    "vrt": "playwright test ./tests/vrt",
    "vrt:update": "PROD=1 playwright test --update-snapshots ./tests/vrt",
    "fmt": "prettier --write .",
    "fmt:data": "prettier --write ./data/*",
    "update:poem": "ts-node ./tools/update-poem-data.ts",
    "update:color": "ts-node ./tools/update-color-data.ts"
  },
  "dependencies": {
    "next": "14.1.0",
    "react": "18.2.0",
    "react-icons": "^5.0.0",
    "react-wavify": "^1.9.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.2",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
