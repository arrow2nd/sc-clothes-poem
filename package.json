{
  "name": "shiny-poems",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:update": "jest -u",
    "test:e2e": "playwright test ./tests/e2e",
    "vrt": "playwright test ./tests/vrt",
    "vrt:update": "PROD=1 playwright test --update-snapshots ./tests/vrt",
    "fmt": "prettier --write .",
    "fmt:data": "prettier --write ./data/*",
    "update:poem": "ts-node ./tools/update-poem-data.ts",
    "update:color": "ts-node ./tools/update-color-data.ts"
  },
  "dependencies": {
    "next": "14.2.4",
    "react": "18.3.1",
    "react-icons": "^5.0.1",
    "react-wavify": "^1.10.0",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.18",
    "axios": "^1.6.7",
    "eslint": "^9.0.0",
    "eslint-config-next": "^14.1.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
