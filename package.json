{
  "name": "shiny-poems",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:update": "jest -u",
    "test:e2e": "playwright test ./tests/e2e",
    "test:vrt": "playwright test ./tests/vrt",
    "test:vrt:update": "PROD=1 playwright test --update-snapshots ./tests/vrt",
